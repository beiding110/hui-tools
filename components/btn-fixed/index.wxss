.btn-fixed{display:block; width:40px; height:40px; line-height:40px; font-size:20px; text-align:center; position:fixed; right:1em; bottom:1em; border:1px solid #EBEDF0; border-radius:50%;}

.btn-fixed.btn-fixed_default{}
.btn-fixed.btn-fixed_primary{color:white; border-color:#07C160; background-color:#07C160;}
.btn-fixed.btn-fixed_info{color:white; border-color:#1989FA; background-color:#1989FA;}
.btn-fixed.btn-fixed_warning{color:white; border-color:#EE0A24; background-color:#EE0A24;}
.btn-fixed.btn-fixed_danger{color:white; border-color:#FF976A; background-color:#FF976A;}